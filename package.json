{
	"name": "aqua-note",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:wrangler": "wrangler dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo 'svelte-kit sync skipped' && husky || true",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply aqua-note-db --local",
		"db:migrate:remote": "wrangler d1 migrations apply aqua-note-db --remote",
		"db:migrate:preview": "wrangler d1 migrations apply aqua_note_db --env preview --remote",
		"db:studio": "drizzle-kit studio",
		"deploy:preview": "wrangler deploy --env preview",
		"deploy:production": "wrangler deploy --env production",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@cloudflare/workers-types": "^4.20250828.0",
		"@inlang/paraglide-js": "^2.2.0",
		"@libsql/client": "^0.15.14",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"drizzle-orm": "^0.44.5"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@playwright/test": "^1.55.0",
		"@storybook/addon-a11y": "^9.1.3",
		"@storybook/addon-docs": "^9.1.3",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"@storybook/addon-vitest": "^9.1.3",
		"@storybook/sveltekit": "^9.1.3",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/kit": "^2.36.3",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24",
		"@vitest/browser": "^3.2.4",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^9.1.3",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"mdsvex": "^0.12.6",
		"playwright": "^1.55.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"storybook": "^9.1.3",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0",
		"vite": "^7.1.3",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0",
		"wrangler": "^4.33.0"
	}
}
