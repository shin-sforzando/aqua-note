#!/bin/sh

echo "🔍 Running pre-commit checks..."

# 1. フォーマットチェック
echo "📝 Checking code formatting..."
npm run format

# 2. Lintチェック
echo "🔎 Running lint checks..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint check failed. Please fix the errors before committing."
  exit 1
fi

# 3. 型チェック
echo "🔍 Running type checks..."
npm run check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed. Please fix the errors before committing."
  exit 1
fi

# 4. ユニットテスト
echo "🧪 Running unit tests..."
npm run test:unit -- --run
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix the tests before committing."
  exit 1
fi

# 5. E2Eテスト
echo "🎭 Running E2E tests..."
npm run test:e2e
if [ $? -ne 0 ]; then
  echo "❌ E2E tests failed. Please fix the tests before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
