#!/bin/sh

echo "🔍 Running pre-commit checks..."

echo "📝 Running lint-staged on changed files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Please fix the errors before committing."
  exit 1
fi

echo "🔍 Running type checks..."
npm run check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed. Please fix the errors before committing."
  exit 1
fi

echo "🧪 Running unit tests..."
npm run test:unit -- --run
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix the tests before committing."
  exit 1
fi

echo "🎭 Running E2E tests..."
npm run test:e2e
if [ $? -ne 0 ]; then
  echo "❌ E2E tests failed. Please fix the tests before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
